<script>
function btnClockwise() {
  document.getElementById("m_block1").style.backgroundColor="orange";
  document.getElementById("m_block2").style.backgroundColor="red";
  document.getElementById("m_block4").style.backgroundColor="green";
document.getElementById("m_block3").style.backgroundColor="yellow";
}

function btnAntiClockwise() {
  document.getElementById("m_block1").style.backgroundColor="yellow";
  document.getElementById("m_block2").style.backgroundColor="green";
  document.getElementById("m_block4").style.backgroundColor="red";
document.getElementById("m_block3").style.backgroundColor="orange";
}
</script>

